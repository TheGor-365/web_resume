<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-10 card shadow rounded p-lg-5 p-md-5 py-5 my-lg-5 my-md-5 my-sm-3 lay me-lg-5 me-md-5">
    <div class="row">
      <div class="col-6">
        <h1>Гор Хачатрян</h1>
        <p class="text-muted">
          Ruby on Rails разработчик
        </p>
      </div>

      <div class="col-6">
        <%= image_tag(image_url("gor.png"), height: 100, class: "photo float-start") %>
      </div>
    </div>

    <%= turbo_frame_tag "toggler" do %>
      <div class="py-sm-5">
        <%= render "pages/resume" %>
      </div>
    <% end %>
  </div>

  <div class="col-lg-5 col-md-5 col-sm-10 card shadow rounded p-lg-5 p-md-5 py-5 my-5 lay ms-lg-5 ms-md-5">
    <%= turbo_frame_tag "experience" do %>
      <%= render "experiences/experience_data" %>
    <% end %>
  </div>
</div>
