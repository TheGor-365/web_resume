<%= turbo_frame_tag "experience" do %>
  <h1 class="mb-5">Опыт</h1>

  <% @experiences.each do |experience| %>
    <%= render experience %>
    <hr><br>
  <% end %>

  <div class="shadow rounded p-3 border border-danger">
    <small class="text-muted"><span class="text-dark">CPE (Cost Per Experience)</span> - коэфициент ценности опыта по моей собственной оценке</small>
  </div>
<% end %>
